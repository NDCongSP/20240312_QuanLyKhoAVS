<RadzenHeader>
    <RadzenRow>
        <RadzenColumn Size="5">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0">
                <RadzenSidebarToggle Click="@(() => sidebarExpanded = !sidebarExpanded)" />
                <RadzenLabel Text="WMS" />
            </RadzenStack>
        </RadzenColumn>
        <RadzenColumn Size="7">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End">
                <RadzenLabel>User</RadzenLabel>
                <RadzenProfileMenu>
                    <Template>
                        <RadzenIcon Icon="account_circle" />
                    </Template>
                    <ChildContent>
                        <RadzenProfileMenuItem Text="Manage account" Path="" Icon="manage_accounts"></RadzenProfileMenuItem>
                        <RadzenProfileMenuItem Text="Logout" Path="fileinput" Icon="logout"></RadzenProfileMenuItem>
                    </ChildContent>
                </RadzenProfileMenu>
            </RadzenStack>
        </RadzenColumn>
    </RadzenRow>
</RadzenHeader>
<RadzenSidebar Responsive="false" Style="width: max-content">
    <RadzenPanelMenu DisplayStyle="@(sidebarExpanded ? MenuItemDisplayStyle.IconAndText : MenuItemDisplayStyle.Icon)" ShowArrow="true">
        <RadzenStack AlignItems="Radzen.AlignItems.Center" class="rz-py-4 rz-py-lg-6" Style="padding: var(--rz-panel-menu-item-padding); border-bottom: var(--rz-panel-menu-item-border);">
        <RadzenImage Path="images/LogoIco.ico" style="width: 48px; height: 48px;"/>
        </RadzenStack>
        

        <RadzenPanelMenuItem Text="Dashboard" Icon="dashboard" Path="" />
        <RadzenPanelMenuItem Text="Import" Icon="import_export" />
        <RadzenPanelMenuItem Text="Export" Icon="import_export" />
        <RadzenPanelMenuItem Text="Reports" Icon="inventory_2" />
        <RadzenPanelMenuItem Text="Trend" Icon="bar_chart" Path="/trend" />
        <RadzenPanelMenuItem Text="Settings" Icon="settings" />
    </RadzenPanelMenu>
</RadzenSidebar>

@code {
    bool sidebarExpanded = true;
}